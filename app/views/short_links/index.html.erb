<h1>Shortified links</h1>
<%= link_to "Back to browser", root_path %>
<table>
	<thead>
		<th>File</th>
		<th>Hash</th>
		<th>Created at</th>
		<th>Times downloaded</th>
		<th>Actions</th>
	</thead>
	<tbody>
		<% @links.each do |link| %>
			<tr class="<%= cycle("alt-row","")%>">
				<td><%= link.path %></td>
				<td><%= link.hash %></td>
				<td><%= link.created_at %></td>
				<td><%= link.counter %></td>
				<td><%= link_to "Delete", short_link_path(link), :method => :delete %></td>
			</tr>
		<% end %>
	</tbody>
</table>