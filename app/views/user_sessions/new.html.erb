<h1>Login</h1>
<% semantic_form_for(@user_session, :url => user_sessions_path) do |f| %>			
	<%= f.inputs do %>
		<%= f.input :login %>
		<div style="clear:both"></div>
		<%= f.input :password %>
	<% end %>
			<div style="clear:both"></div>
  <%= f.buttons do %>
     <%= f.commit_button "Login", :button_html => { :class => "button" }  %>
   <% end %>
<% end %>